<div data-comment_id="<%= comment.id %>" class="comment">
  <p>
    <strong>
      <%= comment.author %>
    </strong>
  </p>

  <p>
    <%= comment.body %>
  </p>

  <p>
    <% if user_signed_in? && (comment.user_id == current_user.id || current_user.id == 1) %>
        <button class="destroy-comment-button">x</button>
    <% end %>
  </p>
</div>