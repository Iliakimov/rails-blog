
<div class="row">
  <div class="col-md-6">
    <h1>Listing articles</h1>
    <button class="create-article-button"><%= link_to 'New article', new_article_path %></button>
    <table class="articles-list">
      <tr>
        <th>Title</th>
        <th>Text</th>
      </tr>

      <% @articles.each do |article| %>
          <tr data-item_id="<%= article.id %>">
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><button><%= link_to 'Show', article_path(article) %></button></td>
            <td>
              <button class="edit-article-button">Edit</button>
            </td>
            <td>
              <button class="delete-article-button">Delete</button>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-6">
    <div class="edit-article" style="display: none">
      <h1>Editing article</h1>

      <form id="edit_article" data-item_id="" accept-charset="UTF-8">
        <div id="errors" style="display: none">
          <h2>
            Ошибка!
          </h2>
          <ul>
            <li id="title_error" style="display: none">Заголовок должен содержать 5 и более символов.</li>
            <li id="text_error" style="display: none">Текст должен содержать 5 и более символов.</li>
          </ul>
        </div>
        <p>
          <label for="article_title">Title</label>
          <br>
          <input type="text" name="title" id="article_title">
        </p>
        <p>
          <label for="article_text">Text</label>
          <br>
          <textarea name="text" id="article_text"></textarea>
        </p>
        <p>
          <table>
            <tr>
              <td><button class="change-article">Save Article</button></td>
              <td><button class="undo-change-article">Cancel</button></td>
            </tr>
          </table>
        </p>
      </form>
    </div>

  </div>
</div>